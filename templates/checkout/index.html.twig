{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/checkout.css") }}">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-3"></div>

        <div class="col-6 pt-3">
            <div class="row pb-3">
                <div class="col-12">
                    <h1 class="display-1 bold-text">Shopping cart</h1>
                </div>
            </div>

            {# ---------- #}
            <div class="row pb-3 border-bottom border-dark border-3">

                <div class="col-3 d-flex align-items-center justify-content-center">
                    <img class="checkout-image" src="{{ asset('record-images/beetles-abbey-road.webp') }}">
                </div>

                <div class="col-6 d-flex justify-content-center flex-column">
        
                    <div class="row">
                        <div class="col-12">
                            <a href="">
                                <h1 class="bold-text checkout-title">Title</h1>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <a href="">
                                <h3 class="bold-text checkout-author">Author</h3>
                            </a>
                        </div>
                    </div>   
                </div>

                <div class="col-2 d-flex justify-content-center align-items-center">
                    <div class="default-white bold-text price float-end d-flex justify-content-center align-items-center">
                        99.99
                    </div>
                </div>

                <div class="col-1 d-flex justify-content-center align-items-center">
                    <a href="">
                        <img class="remove-from-cart-icon" src="{{ asset('images/remove-from-cart.svg') }}">
                    </a>
                </div>
            </div>

            {# ---------- #}

            <div class="row pt-5">
                <div class="col-9 d-flex align-items-center">
                    <h1 class="bold-text total">Total</h1>
                </div>
                <div class="col-2 d-flex justify-content-center align-items-center">
                    <div class="default-white bold-text total-price float-end d-flex justify-content-center align-items-center">
                        99.99
                    </div>
                </div>
                <div class="col-1"></div>
            </div>

            <div class="row pt-5 pb-5">
                <div class="col-9"></div>
                
                <div class="col-2 d-flex justify-content-center align-items-center">
                    <button type="button" class="btn btn-outline-primary">Checkout</button>
                </div>

                <div class="col-1"></div>
            </div>
        </div>

        <div class="col-3"></div>
    </div>
{% endblock %}
